<h1>Sign Up</h1>

<%= form_for @user do |f| %>

  <div class="form-group">
    <%= f.label :email %><br>
    <%= f.text_field :email, type: "email", class: "form-control", placeholder: "example@you.com..." %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, type: "password", class: "form-control", placeholder: "p@55w0rd..." %>
  </div>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, type: "text", class: "form-control", placeholder: "Rey Palpatine..." %>
  </div>

  <div class="form-group">
    <%= f.label :school %>
    <%= f.text_field :school, type: "text", class: "form-control", placeholder: "UC San Diego..." %>
  </div>

  <div class="form-group">
    <%= f.label :address %>
    <%= f.text_field :address, type: "address", class: "form-control", placeholder: "1234 Santa Claus Lane..." %>
  </div>

  <%= f.submit 'Sign Up', class: "btn btn-success mb-2", style: "float: right;" %>

<% end %>
