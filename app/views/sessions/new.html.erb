<h1>Login</h1>


<%= form_tag '/login' do %>
  <div class="form-group">
    <%= label_tag :email %><br>
    <%= text_field_tag :email, "", type: "email", class: "form-control", placeholder: "example@you.com..." %>
  </div>
  <div class="form-group">
    <%= label_tag :password %><br>
    <%= text_field_tag :password, "", type: "password", class: "form-control", placeholder: "p@55w0rd..." %>
  </div>
  <%= submit_tag "Login", class: "btn btn-success md-5", style: "float: right;" %>
<%end%>
